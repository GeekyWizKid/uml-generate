{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/app",
      "dest": "/client/dist/index.html"
    },
    {
      "src": "/client/dist/(.*)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}