{
  "name": "uml-generate",
  "version": "1.0.0",
  "description": "UML diagram generation tool with AI integration",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "keywords": ["uml", "diagram", "plantuml", "ai", "generation", "react", "nodejs"],
  "author": {
    "name": "GeekyWizKid", 
    "url": "https://github.com/GeekyWizKid"
  },
  "homepage": "https://github.com/GeekyWizKid/uml-generate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeekyWizKid/uml-generate.git"
  },
  "bugs": {
    "url": "https://github.com/GeekyWizKid/uml-generate/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@vitejs/plugin-react": "^5.0.0",
    "vite": "^7.1.2"
  }
}